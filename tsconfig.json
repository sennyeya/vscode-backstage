{
  "extends": "@backstage/cli/config/tsconfig.json",
  "include": ["packages/*/src"],
  "compilerOptions": {
    "outDir": "dist-types",
    "rootDir": ".",
    "useUnknownInCatchVariables": false,
    "emitDeclarationOnly": true,
    "noUnusedLocals": false,
    "noImplicitAny": false,
    "noUnusedParameters": false
  }
}
