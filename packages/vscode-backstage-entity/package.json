{
  "name": "backstage-entity",
  "publisher": "backstage",
  "displayName": "vscode-backstage-entity",
  "description": "Language support for Backstage entity files, beyond just YAML.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.83.0"
  },
  "scripts": {
    "watch:client": "tsc -b -w",
    "watch:server": "tsc -b ../backstage-entity-language-server/tsconfig.client.json -w"
  },
  "main": "./out/client/extension.js",
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:yaml"
  ],
  "contributes": {
    "commands": [],
    "languages": [
      {
        "id": "backstage-entity",
        "aliases": [
          "Backstage (Entity)",
          "backstage-entity"
        ],
        "filenames": [
          "catalog-info.yaml"
        ],
        "firstLine": "^apiVersion: backstage.io/.*$",
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "backstage-entity",
        "scopeName": "source.backstage-entity",
        "path": "./syntaxes/yaml.tmLanguage"
      }
    ]
  },
  "dependencies": {
    "typescript": "^5.2.2",
    "vscode-languageclient": "^9.0.1",
    "yaml": "^2.3.2"
  },
  "devDependencies": {
    "@types/node": "^20.8.4",
    "@types/vscode": "^1.83.0"
  }
}
